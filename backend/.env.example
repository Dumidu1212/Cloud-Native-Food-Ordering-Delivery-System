# Port for the backend server
PORT=3000

# MongoDB connection URI for storing data (e.g., restaurant, orders)
MONGODB_URI=mongodb://dbuser:dbpassword@mongodb.example.com:27017/food_delivery_db

# Secret key used for JWT token generation and verification
JWT_SECRET=SuperSecretJWTKey

# Payment gateway API key (e.g., Stripe or PayHere in sandbox/production mode)
PAYMENT_GATEWAY_KEY=YourPaymentGatewayKey

# Twilio credentials for SMS notifications
TWILIO_ACCOUNT_SID=YourTwilioAccountSID
TWILIO_AUTH_TOKEN=YourTwilioAuthToken
